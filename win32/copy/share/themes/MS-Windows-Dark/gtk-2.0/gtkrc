}

style "ms_windows_dark_button"
{
	bg[NORMAL] = "#3a3a3a"
	bg[ACTIVE] = "#454545"
	bg[PRELIGHT] = "#4a4a4a"
	bg[INSENSITIVE] = "#333333"
