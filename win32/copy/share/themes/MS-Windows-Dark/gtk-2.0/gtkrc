# ZoiteChat MS-Windows-Dark GTK2 theme overrides.
# Derived from MS-Windows with dark palette defaults.

gtk_color_scheme = "bg_color:#2b2b2b\nfg_color:#e0e0e0\nbase_color:#1f1f1f\ntext_color:#e0e0e0\nselected_bg_color:#4a4a4a\nselected_fg_color:#ffffff\ntooltip_bg_color:#333333\ntooltip_fg_color:#e0e0e0"

